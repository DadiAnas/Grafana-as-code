{
  "uid": "prod-executive-summary",
  "title": "Production Executive Summary",
  "description": "High-level production metrics for executives - Production only",
  "tags": ["prod", "executive", "summary"],
  "timezone": "browser",
  "schemaVersion": 39,
  "refresh": "5m",
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "System Availability (Last 30 Days)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.99 },
              { "color": "green", "value": 0.999 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(up[30d])",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Total Requests (Today)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(increase(http_requests_total[24h]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate (24h)",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[24h])) / sum(rate(http_requests_total[24h]))",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Average Response Time",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[24h])) by (le))",
          "refId": "A"
        }
      ]
    }
  ]
}
