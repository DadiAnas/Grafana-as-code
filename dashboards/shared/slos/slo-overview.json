{
  "uid": "slo-overview",
  "title": "SLO Overview",
  "description": "Service Level Objectives overview dashboard",
  "tags": ["slo", "sli", "reliability"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "1m",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {}
      },
      {
        "name": "service",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(http_requests_total, service)",
        "current": {},
        "includeAll": false,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Availability SLO (99.9%)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "1 - (sum(increase(http_requests_total{service=\"$service\", status=~\"5..\"}[7d])) / sum(increase(http_requests_total{service=\"$service\"}[7d])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0.99,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.999 },
              { "color": "green", "value": 0.9995 }
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Latency SLO (P99 < 500ms)",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "sum(increase(http_request_duration_seconds_bucket{service=\"$service\", le=\"0.5\"}[7d])) / sum(increase(http_request_duration_seconds_count{service=\"$service\"}[7d]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0.95,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "yellow", "value": 0.99 },
              { "color": "green", "value": 0.995 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Error Budget Remaining",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "(1 - 0.999) - (sum(increase(http_requests_total{service=\"$service\", status=~\"5..\"}[30d])) / sum(increase(http_requests_total{service=\"$service\"}[30d])))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": -0.001 },
              { "color": "yellow", "value": 0 },
              { "color": "green", "value": 0.0005 }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Error Budget Burn Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{service=\"$service\", status=~\"5..\"}[1h])) / sum(rate(http_requests_total{service=\"$service\"}[1h]))) / (1 - 0.999)",
          "legendFormat": "1h burn rate",
          "refId": "A"
        },
        {
          "expr": "(sum(rate(http_requests_total{service=\"$service\", status=~\"5..\"}[6h])) / sum(rate(http_requests_total{service=\"$service\"}[6h]))) / (1 - 0.999)",
          "legendFormat": "6h burn rate",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 14.4 }
            ]
          }
        }
      }
    }
  ]
}
