# --- AWS S3 Backend ---
# bucket         = "my-terraform-state"
# key            = "myenv/grafana/terraform.tfstate"
# region         = "us-east-1"
# encrypt        = true
# dynamodb_table = "terraform-locks"

# --- Azure Blob Storage ---
# resource_group_name  = "my-rg"
# storage_account_name = "mytfstate"
# container_name       = "tfstate"
# key                  = "myenv/grafana/terraform.tfstate"

# --- Google Cloud Storage ---
# bucket = "my-terraform-state"
# prefix = "myenv/grafana"

# --- GitLab HTTP Backend ---
# address        = "https://gitlab.example.com/api/v4/projects/<PROJECT_ID>/terraform/state/myenv"
# lock_address   = "https://gitlab.example.com/api/v4/projects/<PROJECT_ID>/terraform/state/myenv/lock"
# unlock_address = "https://gitlab.example.com/api/v4/projects/<PROJECT_ID>/terraform/state/myenv/lock"
# lock_method    = "POST"
# unlock_method  = "DELETE"
# retry_wait_min = 5
